             <ContainerInput key={field.id}>
    						<div className="box_input_error"  key={field.id}>

                            <div
                                key={field.id}
                                className="box_label_error">

                                <label htmlFor={"galleryImages"}>{`${index + 1}ยบ Imagem da galeria`}</label>

                                {

                                    errors && (
                                        errors["galleryImages"!]?.type === 'required' ||
                                        errors["galleryImages"!]?.type === 'matches' ||
                                        errors["galleryImages"!]?.type === 'max' ||
                                        errors["galleryImages"!]?.type === 'min') ? (
                                        <div className="dropdown">
                                            <BsExclamationCircle className="svg" />
                                            <div className="dropdown-content" key={field.id}>
                                                <p>{errors["galleryImages"!]?.message}</p>
                                            </div>

                                        </div>
                                    ) : null
                                }
                            </div>


                                <input

                                    {...register(`galleryImages.${index}.imageUrl` as const, {
                                        required: true
                                    })}
                                    placeholder={"https://image.com"}
                                    className={'galleryInput'}
                                    />

                                    </div>
   
            </ContainerInput>